{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  }
}
