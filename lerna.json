{
  "lerna": "5.5.0",
  "version": "15.13.2",
  "npmClient": "yarn",
  "packages": [
    "packages/contentful-slatejs-adapter",
    "packages/rich-text-from-markdown",
    "packages/rich-text-html-renderer",
    "packages/rich-text-links",
    "packages/rich-text-plain-text-renderer",
    "packages/rich-text-react-renderer",
    "packages/rich-text-types"
  ],
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  }
}
