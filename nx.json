{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["{projectRoot}/]"],
      "cache": true
    },
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "generate-json-schema": {
      "dependsOn": ["^generate-json-schema"],
      "outputs": ["{projectRoot}/src/schemas/generated"],
      "cache": true
    },
    "test:prod": {
      "cache": true
    }
  },
  "defaultBase": "origin/master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": ["default"]
  }
}
