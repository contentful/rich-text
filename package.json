{
  "name": "@contentful/rich-text",
  "private": true,
  "description": "A monorepo for all NPM packages related to Rich Text",
  "author": "Contentful GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/rich-text.git"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "benchmark": "ts-node -O '{\"module\": \"commonjs\"}' bin/benchmark",
    "build": "lerna run build",
    "commit": "git-cz",
    "clean": "lerna exec 'rm -rf node_modules/ dist/' && rm -rf node_modules/",
    "lint": "lerna run lint",
    "lerna": "lerna",
    "prettier": "prettier './**/*.{js,jsx,ts,tsx}' --write",
    "prettier:check": "prettier --check '**/*.{jsx,js,ts,tsx,md,mdx}'",
    "postinstall": "lerna bootstrap --hoist --progress --no-ci",
    "prebuild": "lerna run prebuild",
    "prepublishOnly": "yarn && yarn build && yarn lint && yarn test",
    "release": "lerna version --no-private --conventional-commits --create-release github --yes && lerna publish from-git --yes",
    "start": "lerna run start",
    "test": "jest",
    "test:ci": "yarn build && yarn test:prod",
    "test:prod": "yarn lint && yarn test -- --coverage --no-cache",
    "test:watch": "jest --watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    },
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/faker": "^4.1.12",
    "@types/jest": "^27.0.1",
    "benchmark": "^2.1.4",
    "commitizen": "^3.1.2",
    "git-cz": "^3.3.0",
    "husky": "^2.7.0",
    "lerna": "^5.5.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "rollup": "^1.32.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.10.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^4.4.2",
    "validate-commit-msg": "^2.14.0"
  },
  "packageManager": "yarn@3.2.3"
}
